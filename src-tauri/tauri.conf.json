{
  "productName": "Rainy Day",
  "version": "0.5.12",
  "identifier": "com.enosislabs.rainyday",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rainy Day",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "visible": true,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "transparent": true,
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.googleapis.com https://accounts.google.com https://*.run.app http://localhost:3000; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.productivity",
    "copyright": "Â© 2026 Enosis Labs. All rights reserved.",
    "shortDescription": "AI-powered productivity agent that turns your inbox into an actionable plan",
    "longDescription": "Rainy Day is an AI-powered productivity agent that connects to your Gmail, Google Calendar, and Google Tasks to create a smart daily plan. It prioritizes your inbox, schedules focus blocks, and helps you stay on top of your tasks.",
    "macOS": {
      "minimumSystemVersion": "11.0",
      "exceptionDomain": "",
      "frameworks": [],
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "rainyday"
        ]
      }
    },
    "updater": {
      "endpoints": [
        "https://github.com/ferxalbs/rainy-day/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRFMkVFQTQ4NkI0OTJFMTgKUldRWUxrbHJTT291VG5BK0hXOFVmbXQxenhJMGhRQUVKUmExa0J0UkZrRVZ0bTRRQkdjeWh5OHEK"
    }
  }
}
